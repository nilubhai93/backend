<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

</head>

<body>
    <div class="text-white main w-full min-h-screen bg-zinc-900">
        <div class="form p-10">
            <form action="/create" method="post">
                <input class="bg-gray-800  border-white block w-full px-5 py-2  rounded-xl" type="text" placeholder="Title goes here..." name="title">
                <textarea class="bg-gray-800 border-white block w-full  mt-2 px-5 py-2 resize-none rounded-xl" placeholder="Write your tast details here..." name="details"></textarea>
                <input class="p-1 border-white bg-blue-700 mt-3  rounded" type="submit" value="Create Task">
            </form>
        </div>

        <div class="tasks p-10 flex flex-wrap gap-3">
            <% if(files.length>0){ %>
                <% files.forEach(function(val) { %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-700">
                        <h1 class="text-white text-3xl tracking-tighter"> <%= val %> </h1>
                        <div class="flex w-full justify-between">
                            <a class="text-blue-500" href="/file/<%= val %>">Read more..</a>
                            <a href="/edit/<%= val %>"> Edit Filename</a>
                        </div>
                    </div>
                <% })%>
            <% } else  { %>
                <h3 class="text-zinc-300">No tasks yet</h3>
            <% } %>
        </div>
    </div>
</body>


</html>

